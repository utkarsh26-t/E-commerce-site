<% layout('layouts/boilerplate') -%>

<div class="row">
    <div class="col-md-6 mx-auto">
        <form action="/products/<%=product._id%>?_method=PATCH" class="validated-form" method="POST" class='mt-4' novalidate>

            <div class="mb-3">
                <label for="name" class="form-label">Name: </label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Product Name" value="<%=product.name%>" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label for="img" class="form-label">Image URL: </label>
                <input type="text" class="form-control" name="img" id="img" placeholder="Product Image" value="<%=product.img%>" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price: </label>
                <div class="input-group mb-3">
                    <span class="input-group-text">Rs</span>
                    <input type="number" class="form-control" id="price" name="price" aria-label="Amount (to the nearest dollar)" value="<%=product.price%>" required>
                    <span class="input-group-text">.00</span>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="desc" class="form-label">Description: </label>
                <textarea name="desc" id="desc" cols="30" rows="5" class="form-control" required><%=product.desc%></textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <button type="submit" class="btn btn-sm btn-success">Edit</button>
        </form>
    </div>
</div>
